{
  "name": "donation-village-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "블록체인 기반 투명한 기부 플랫폼 - Monorepo",
  "scripts": {
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:install": "cd frontend && npm install",
    "blockchain:compile": "cd blockchain/hardhat-setup && npm run compile",
    "blockchain:test": "cd blockchain/hardhat-setup && npm run test",
    "blockchain:deploy:local": "cd blockchain/hardhat-setup && npm run deploy:local",
    "blockchain:deploy:sepolia": "cd blockchain/hardhat-setup && npm run deploy:sepolia",
    "blockchain:install": "cd blockchain/hardhat-setup && npm install",
    "install:all": "npm run frontend:install && npm run blockchain:install",
    "dev": "npm run frontend:dev"
  },
  "workspaces": [
    "frontend",
    "backend",
    "blockchain/hardhat-setup"
  ],
  "keywords": [
    "blockchain",
    "donation",
    "react",
    "ethereum",
    "arbitrum",
    "supabase",
    "DID"
  ],
